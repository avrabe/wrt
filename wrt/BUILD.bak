load("@rules_rust//rust:defs.bzl", "rust_library", "rust_test")
load("@crates//:defs.bzl", "all_crate_deps")

package(default_visibility = ["//visibility:public"])

rust_library(
    name = "wrt",
    srcs = glob(["src/**/*.rs"]),
    crate_root = "src/lib.rs",
    edition = "2021",
    deps = all_crate_deps(
        normal = True,
        proc_macro = True,
        exclude = ["wrt"],
    ),
    proc_macro_deps = all_crate_deps(
        proc_macro = True,
        exclude = ["wrt"],
    ),
)

rust_test(
    name = "wrt_test",
    crate = ":wrt",
    edition = "2021",
    deps = all_crate_deps(
        normal = True,
        normal_dev = True,
        proc_macro = True,
        proc_macro_dev = True,
        exclude = ["wrt"],
    ),
    proc_macro_deps = all_crate_deps(
        proc_macro = True,
        proc_macro_dev = True,
        exclude = ["wrt"],
    ),
)
