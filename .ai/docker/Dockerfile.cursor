FROM rust:1.78-slim

RUN apt-get update && apt-get install -y git patch build-essential curl && \
    pip install --no-cache-dir langgraph==0.4.0 openai==1.25 ghapi tomli==2.0 gitpython unidiff markdown

# Install headless Cursor CLI (assumes binary release URL)
RUN curl -L https://cursor.sh/cli/latest/cursor-linux-x64.tgz | tar -xz -C /usr/local/bin

ENV PYTHONUNBUFFERED=1 \
    CURSOR_API_KEY=${CURSOR_API_KEY:-dummy} \
    CARGO_TERM_COLOR=always \
    RUSTFLAGS="-Dwarnings" \
    DEBIAN_FRONTEND=noninteractive

WORKDIR /workspace
CMD ["bash"] 